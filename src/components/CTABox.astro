---
interface Props {
  title: string;
  description: string;
  buttonText: string;
  href: string;
}
const { title, description, buttonText, href } = Astro.props;
---

<div class="cta-box">
  <h3>{title}</h3>
  <p>{description}</p>
  <a href={href} class="cta-button" target="_blank" rel="noopener">
    {buttonText}
  </a>
</div>
